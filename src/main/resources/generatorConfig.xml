<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <commentGenerator>
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://vm:3306/test?characterEncoding=UTF8"
                        userId="dev" password="dev">
        </jdbcConnection>

        <!-- 对于数据库中DECIMAL or NUMERIC类型字段是否强制使用java.math.BigDecimal表示 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.hzz.model"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.hzz.mapper"
                         targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.hzz.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table schema="tb1" tableName="tb1" enableCountByExample="false"
               enableDeleteByPrimaryKey="false" enableUpdateByExample="false">
            <property name="useActualColumnNames" value="false" />
        </table>
        <table schema="tb2" tableName="tb2" enableCountByExample="false"
               enableDeleteByPrimaryKey="false" enableUpdateByExample="false">
            <property name="useActualColumnNames" value="false" />
        </table>
    </context>
</generatorConfiguration>